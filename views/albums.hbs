    {{#each albumsArray}}
    <div class="artist-album-div">
                {{#each this.images}}
                {{#if @first}}
                <img class="image" src="{{this.url}}">
                {{/if}}
                {{/each}}            
                <p> 
                {{this.name}}
                </p>   
                <a class="link-btn" href="/tracks/{{this.id}}">View Tracks</a>
    </div>
        {{/each}}